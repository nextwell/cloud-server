doctype html
html
	head
		title #{title}
		include layouts/header.pug
		script(src='js/main.js')
	body
		h1 Здравствуйте, #{name}
		a(href="/quit") Выйти
		br
		br
		p
			label Выберите файл:
			br
			input(type="file" id="upload_input" multiple="multiple" name="files[]")

		div(class="progress")
			div(class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%")
		br
		.container
			table(class="table")
				thead(class="thead-dark")
					tr
						th(scope="row") Имя файла
						th Размер
						th Функции
				tbody
					- for (var i=0; i<files.length; i++)
						tr
							th(scope="row")= files[i].name
							th= `${(files[i].size/1024/1024).toFixed(2)} Мб`
							th
								a(href="/download/" + files[i]._id) Скачать
								br
								a(href="#") Поделиться
								br
								a(href="/remove/" + files[i]._id) Удалить
					
